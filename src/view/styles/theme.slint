    out property <color> background: #2b2b2b;   
    out property <color> surface: #3c3c3c;
    out property <color> surface-hover: #4a4a4a;
    out property <color> primary: #0078d4;
    out property <color> text-primary: #ffffff;
    out property <color> text-secondary: #cccccc;
    out property <color> border: #555555;
